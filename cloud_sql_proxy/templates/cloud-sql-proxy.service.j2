# {{ ansible_managed }}

[Unit]
Description=GCP Compute Engine SQL Proxy
Requires=networking.service
After=networking.service

[Service]
Type=simple
WorkingDirectory=/usr/local/bin
ExecStart={{ cloud_sql_proxy_install_path }}  -instances={{ cloud_sql_proxy_connection_name }}=tcp:{{ cloud_sql_proxy_tcp_port }} 

Restart=always
StandardOutput=journal
User=root


[Install]
WantedBy=multi-user.target
